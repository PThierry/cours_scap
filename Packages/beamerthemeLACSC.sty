		\iflanguage{frenchb}{
			\vfill
			\includegraphics[width=0.450\paperwidth, trim = 2.0cm 1.9cm 2.0cm 1.9cm, clip]{ece_fr} & \\%trim = g b d h
			
		}{
			\vfill
