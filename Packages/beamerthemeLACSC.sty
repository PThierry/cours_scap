\defbeamertemplate*{title page}{customizedPhD}[1][]
{
	\frameheader
	\vfill
	\centering
	\vfill
	\vfill
	\begin{beamercolorbox}[sep=6pt,center,shadow=true,rounded=true,#1]{title}
		\usebeamerfont{title}\inserttitle%
		\ifx\insertsubtitle\@empty%
		\else%
			\vskip0.25em%
			{\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
		\fi%     
	\end{beamercolorbox}%
	\vfill
	\vfill
	\vfill
	\begin{beamercolorbox}[center,#1]{author}
		\usebeamerfont{author}\insertauthor
	\end{beamercolorbox}
	\vfill
	\begin{beamercolorbox}[center,#1]{institute}
		\usebeamerfont{institute}\insertinstitute
	\end{beamercolorbox}
	\vfill
	\begin{beamercolorbox}[center,#1]{date}
		\usebeamerfont{date}\insertdate
	\end{beamercolorbox}
	\vfill
	{\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
	\vfill
}


